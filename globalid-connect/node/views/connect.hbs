<html>
  <head>
    <meta charset='utf-8' />
    <title>GlobaliD Connect Demo</title>
    <link rel='stylesheet' href='../style.css' type='text/css' />
  </head>
  <body class='flex-center-center flex-column'>
    <div class='brand'><img src='../gid-logo.svg' alt='GlobaliD logo' /></div>
    <div class='card'>
      <p class='card-label'>Demo App</p>
      <h1 class='card-title'>GlobaliD Connect Demo</h1>
      <div class='card-focus'>
        <p class='card-focus-text'>
          Aliqua adipisci qui cillum consequatur. Cillum accusantium but eu or exercitationem esse. Veritatis consequat
          for excepteur.
        </p>
      </div>

      <h2>Identity</h2>
      <table class='vertical-table'>
        <tr>
          <th>gid_uuid</th>
          <td>{{identity.gid_uuid}}</td>
        </tr>
        <tr>
          <th>gid_name</th>
          <td>{{identity.gid_name}}</td>
        </tr>
        <tr>
          <th>display_name</th>
          <td>{{identity.display_name}}</td>
        </tr>
      </table>

      <h2>Attestations</h2>
      <table class='attestations-table'>
        <tr>
          <th>type</th>
          <th>attestor</th>
          <th>verification_type</th>
          <th>created_at</th>
        </tr>
        {{#each attestations}}
          <tr>
            <td>{{type}}</td>
            <td>{{attestor}}</td>
            <td>{{verification_type}}</td>
            <td>{{created_at}}</td>
          </tr>
        {{/each}}
      </table>

      {{#if pii}}
        <h2>PII</h2>
        <table class='pii-table'>
          <tr>
            <th>type</th>
            <th>value</th>
            <th>timestamp</th>
          </tr>
          {{#each pii}}
            <tr>
              <td>{{type}}</td>
              <td>{{value}}</td>
              <td>{{timestamp}}</td>
            </tr>
          {{/each}}
        </table>
      {{/if}}

      <div class='spacer'></div>
      <a class='button' href='/verifications'>Go Back</a>
    </div>
  </body>
</html>