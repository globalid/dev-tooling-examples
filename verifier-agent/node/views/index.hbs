<!DOCTYPE html>
  <head>
    <meta charset='utf-8' />
    <title>GlobaliD Verification Demo</title>
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/styles/atom-one-dark.min.css'
    />
    <link rel='stylesheet' href='{{BASE_URL}}/index.css' />
    <link rel='stylesheet' href='{{BASE_URL}}/spinner.css' />
    <script src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.1/highlight.min.js'></script>
    <script src='https://cdn.socket.io/4.5.0/socket.io.min.js'></script>
    <script src='https://unpkg.com/qr-code-styling@1.5.0/lib/qr-code-styling.js'></script>
    <script src='{{BASE_URL}}/index.js'></script>
    <script>initWebSocket('{{wsUrl}}', '{{trackingId}}')</script>
    <script>window.addEventListener('load', () => document.querySelector('#requirements-select').addEventListener('change', e => onFlowSelect(e)), {once: true})</script>
  </head>
  <body onload="generateStyledQrCode('{{qrCodeUrl}}')">
    <div class='brand'>
      <img src='{{BASE_URL}}/images/logo.svg' alt='GlobaliD logo' />
    </div>
    <div class='card'>
      <select id="requirements-select" class="card-title">
          {{#each requirements}}
              <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
          {{/each}}
      </select>
        <h1 id="card-title"></h1>
      <h2 id='card-subtitle' class='card-subtitle'>{{selectedRequirement.purpose}}</h2>
      <div id='main-container'></div>
    </div>
  </body>
</html>